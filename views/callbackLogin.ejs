<div id='login-container'>
  <div class='callbacklogintext-container'>
    <div class='flux'>
      Your vote changes the world.
    </div>
  </div>
  <div class='login-flash-wrapper'>
    <% if (error) { %>
      <span class='alert-flash'><%= error %> </span><br>
    <% } %>
  </div>
  <div class='login-form-wrapper'>
    <form action='/login/callback' method='post' class='login-form'>
      <div class='input-wrapper container'>
        <div>
          <input class='login-item-input email' type='email' name='email' placeholder='Email' required />
        </div>
        <div>
          <input class='login-item-input password' type='password' name='password' placeholder='Password' required minlength='8' />
        </div>
      </div>
      <div>
        <button class='loginbutton' type='submit'>Login</button>
      </div>
      <input type='hidden' value='<%= JSON.stringify(callbackUrl) %>' name='callbackUrl'>
    </form>
  </div>
  <div class='login-form-wrapper'>
    <form method='get' class='login-another-button-wrapper'>
      <button class='login-another-button' formaction='/signup' type='submit'>Join Us</button>
      <button class='login-another-button' formaction='/' type='submit'>Look Around</button>
    </form>
  </div>
</div>
